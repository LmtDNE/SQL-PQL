<div class="row">
	<div class="col-md-8 col-md-2-offset">
<% if flash[:success] %>
<% flash[:success].each do |success| %>
	<div class="alert alert-wraning alert-dismissable">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<%= success %>
	</div>
<% end %>
<% end %>

<% if flash[:notice] %>
<% flash[:notice].each do |notice| %>
	<div class="alert alert-wraning alert-dismissable">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<%= notice %>
	</div>
<% end %>
<% end %>

<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
	<div class="alert alert-danger alert alert-dismissable">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<%= error %>
	</div>
<% end %>
<% end %>
</div>
</div>