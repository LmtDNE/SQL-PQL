
<div class="row">

	<div class="col-md-5 input-window">
		<p><%= section_content %></p>
		<form>
			<div class="form-group">
			<textarea class="sql-input" placeholder="Type query here..."><%= query_statement %></textarea>
			</div>
			<div class="form-group pull-right">
				<% if answer %>
					<input type="button" class="btn btn-default" value="Show Answer">
				<% end %>
			<input type="submit" class="btn btn-primary">
			</div>
		</form>
	</div>

	<div class="col-md-6 well output-window">
		<center>
		<h3>Output Screen</h3>
		<p>Press "submit" to see result</p>
			</center>
	</div>
</div>
