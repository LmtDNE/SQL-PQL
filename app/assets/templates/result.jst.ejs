
<% var correct = (result.status === 'Correct!') %>
<% var alertType = (correct ? 'alert-success' : 'alert-danger') %>
<% var glyphiconType = (correct ? 'glyphicon glyphicon-ok' : 'glyphicon glyphicon-remove') %>

<% if (result.status) { %>
<div class="alert <%= alertType %> alert-dismissable strong">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <span class="<%= glyphiconType %>"></span> <%= result.status %>
</div>
<% } %>

<h3>Result:</h3>

<table class="table table-striped">

  <tr>
    <% result.fields.forEach(function(fieldName) { %>
    <th><%= fieldName %></th>
    <% }) %>
  </tr>

  <% result.rows.forEach(function(row) { %>
  <tr>
    <% row.forEach(function(columnValue) { %>
    <td>
      <% if (isNaN(columnValue)) { %>
      <%= columnValue %>
      <% } else { %>
      <%= _.string.numberFormat(Number(columnValue)) %>
      <% } %>
    </td>  
    <% }) %>
  </tr>
  <% }) %>

</table>